
#[ max priority queue ]
#include <stdio.h>

#define MAX 50

int pq[MAX];
int size = 0;

void insert(int value)
{
    int i;

    if (size == MAX)
    {
        printf("Priority Queue Overflow\n");
        return;
    }

    for (i = size - 1; i >= 0 && pq[i] < value; i--)
    {
        pq[i + 1] = pq[i];
    }

    pq[i + 1] = value;
    size++;
}

void deleteMax()
{
    if (size == 0)
    {
        printf("Priority Queue Underflow\n");
        return;
    }

    printf("Deleted element: %d\n", pq[0]);

    for (int i = 0; i < size - 1; i++)
    {
        pq[i] = pq[i + 1];
    }
    size--;
}

void display()
{
    if (size == 0)
    {
        printf("Priority Queue is empty\n");
        return;
    }

    for (int i = 0; i < size; i++)
    {
        printf("%d ", pq[i]);
    }
    printf("\n");
}

int main()
{
    int choice, value;

    while (1)
    {
        printf("\n1. Insert\n2. Delete Max\n3. Display\n4. Exit\n");
        scanf("%d", &choice);

        switch (choice)
        {
        case 1:
            scanf("%d", &value);
            insert(value);
            break;

        case 2:
            deleteMax();
            break;

        case 3:
            display();
            break;

        case 4:
            return 0;

        default:
            printf("Invalid choice\n");
        }
    }
}

#[ min priority queue ]
#include <stdio.h>

#define MAX 50

int pq[MAX];
int size = 0;

void insert(int value)
{
    int i;

    if (size == MAX)
    {
        printf("Priority Queue Overflow\n");
        return;
    }

    for (i = size - 1; i >= 0 && pq[i] > value; i--)
    {
        pq[i + 1] = pq[i];
    }

    pq[i + 1] = value;
    size++;
}

void deleteMin()
{
    if (size == 0)
    {
        printf("Priority Queue Underflow\n");
        return;
    }

    printf("Deleted element: %d\n", pq[0]);

    for (int i = 0; i < size - 1; i++)
    {
        pq[i] = pq[i + 1];
    }
    size--;
}

void display()
{
    if (size == 0)
    {
        printf("Priority Queue is empty\n");
        return;
    }

    for (int i = 0; i < size; i++)
    {
        printf("%d ", pq[i]);
    }
    printf("\n");
}

int main()
{
    int choice, value;

    while (1)
    {
        printf("\n1. Insert\n2. Delete Min\n3. Display\n4. Exit\n");
        scanf("%d", &choice);

        switch (choice)
        {
        case 1:
            scanf("%d", &value);
            insert(value);
            break;

        case 2:
            deleteMin();
            break;

        case 3:
            display();
            break;

        case 4:
            return 0;

        default:
            printf("Invalid choice\n");
        }
    }
}
