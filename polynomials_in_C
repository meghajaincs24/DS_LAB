#include <stdio.h>
#include <stdlib.h>

struct node {
    int coeff;
    int exp;
    struct node* next;
};

// Returns the updated head of the list
struct node* insert(struct node* head, int c, int e) {
    struct node* newNode = (struct node*)malloc(sizeof(struct node));
    newNode->coeff = c;
    newNode->exp = e;
    newNode->next = NULL;

    if (head == NULL) {
        return newNode; // New node becomes the head
    }

    struct node* temp = head;
    while (temp->next != NULL) {
        temp = temp->next;
    }
    temp->next = newNode;
    return head; // Return the original head
}

void display(struct node* head) {
    while (head != NULL) {
        printf("%dx^%d", head->coeff, head->exp);
        head = head->next;
        if (head != NULL) printf(" + ");
    }
    printf("\n");
}

void addPolynomials(struct node* p1, struct node* p2) {
    printf("Result: ");
    while (p1 != NULL && p2 != NULL) {
        if (p1->exp > p2->exp) {
            printf("%dx^%d", p1->coeff, p1->exp);
            p1 = p1->next;
        } else if (p2->exp > p1->exp) {
            printf("%dx^%d", p2->coeff, p2->exp);
            p2 = p2->next;
        } else {
            printf("%dx^%d", p1->coeff + p2->coeff, p1->exp);
            p1 = p1->next;
            p2 = p2->next;
        }
        if (p1 != NULL || p2 != NULL) printf(" + ");
    }
    printf("\n");
}

int main() {
    struct node* poly1 = NULL;
    struct node* poly2 = NULL;

    // Use: head = insert(head, ...)
    poly1 = insert(poly1, 5, 2);
    poly1 = insert(poly1, 2, 0);

    poly2 = insert(poly2, 4, 2);
    poly2 = insert(poly2, 3, 1);

    printf("Poly 1: "); display(poly1);
    printf("Poly 2: "); display(poly2);

    addPolynomials(poly1, poly2);

    return 0;
}
