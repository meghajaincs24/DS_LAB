#include <stdio.h>
#include <stdlib.h>

struct Node {
    int data;
    struct Node *next;
};

struct Node *top = NULL;

// PUSH
void push(int item) {
    struct Node *newNode = malloc(sizeof(struct Node));
    newNode->data = item;
    newNode->next = top;
    top = newNode;
    printf("Pushed %d\n", item);
}

// POP
void pop() {
    if (top == NULL) {
        printf("Stack Underflow\n");
        return;
    }
    struct Node *temp = top;
    printf("Popped %d\n", temp->data);
    top = top->next;
    free(temp);
}

// PEEK
void peek() {
    if (top == NULL) {
        printf("Stack is empty\n");
        return;
    }
    printf("Top element: %d\n", top->data);
}

// DISPLAY
void display() {
    struct Node *temp = top;
    printf("Stack: ");
    while (temp != NULL) {
        printf("%d ", temp->data);
        temp = temp->next;
    }
    printf("\n");
}

int main() {
    push(10);
    push(20);
    push(30);
    peek();
    display();

    pop();
    
    peek();
    display();

    return 0;
}
