#include <stdio.h>
#include <string.h>
#include <ctype.h>

#define Max 100

int top = -1;
char stack[Max];

void push(char x) {
    if (top >= Max - 1) {
        printf("Stack Overflow\n");
    } else {
        stack[++top] = x;
    }
}

char pop() {
    if (top == -1) {
        return '\0';
    } else {
        return stack[top--];
    }
}

int precedence(char x) {
    if (x == '(') return 0;
    if (x == '+' || x == '-') return 1;
    if (x == '*' || x == '/') return 2;
    if (x == '^') return 3; // Added exponent for completeness
    return -1;
}

int main() {
    char infix[Max], x;
    printf("Enter infix expression: ");
    scanf("%s", infix);
    
    printf("Postfix expression: ");

    for (size_t i = 0; i < strlen(infix); i++) {
        char current = infix[i];

        if (isalnum(current)) {
            printf("%c", current); // Print operands immediately
        } 
        else if (current == '(') {
            push(current);
        } 
        else if (current == ')') {
            while ((x = pop()) != '(') {
                printf("%c", x);
            }
        } 
        else { // It is an operator
            while (top != -1 && precedence(stack[top]) >= precedence(current)) {
                printf("%c", pop());
            }
            push(current);
        }
    }

    // Pop remaining operators from stack
    while (top != -1) {
        printf("%c", pop());
    }

    printf("\n");
    return 0;
}
